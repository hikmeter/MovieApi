@model List<ResultMovieDto>
@{
    ViewData["Title"] = "MovieList";
    Layout = "~/Views/UserWebUILayout/LayoutUI.cshtml";
}

<div class="page-single movie_list">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="topbar-filter">
					<p>Toplam <span>1608 film</span> bulundu</p>
					<label>Sırala:</label>
					<select>
						<option value="popularity">Popülerliğe Göre (Azalan)</option>
						<option value="popularity">Popülerliğe Göre (Artan)</option>
						<option value="rating">Puanlamaya Göre (Azalan)</option>
						<option value="rating">Puanlamaya Göre (Artan)</option>
						<option value="date">Vizyona Giriş Tarihine Göre (Yeni → Eski)</option>
						<option value="date">Vizyona Giriş Tarihine Göre (Eski → Yeni)</option>
					</select>
					<a href="movielist.html" class="list"><i class="ion-ios-list-outline active"></i></a>
					<a href="moviegrid.html" class="grid"><i class="ion-grid"></i></a>
				</div>
				@foreach(var item in Model)
				{
				<div class="movie-item-style-2">
					<img src="@item.coverImageUrl" alt="">
					<div class="mv-item-infor">
						<h6><a href="moviesingle.html">@item.title <span>(@item.createdYear)</span></a></h6>
						<p class="rate"><i class="ion-android-star"></i><span>@item.rating</span> /10</p>
						<p class="describe">@item.description</p>
						<p class="run-time"> Süre: @item.duration dk    .     <span>MMPA: PG-13 </span>    .     <span>Vizyon: @item.releaseDate</span></p>
						<p>Yönetmen: <a href="#">Joseph Kosinski</a></p>
						<p>Stars: <a href="#">Tom Cruise,</a> <a href="#">Morgan Freeman,</a> <a href="#">  Andrea Riseborough</a></p>
					</div>
				</div>
				}
				<div class="topbar-filter">
					<label>Sayfa başına film:</label>
					<select>
						<option value="range">5 Film</option>
						<option value="saab">10 Film</option>
					</select>
					<div class="pagination2">
						<span>Sayfa 1 / 2:</span>
						<a class="active" href="#">1</a>
						<a href="#">2</a>
						<a href="#"><i class="ion-arrow-right-b"></i></a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-12 col-xs-12">
				<div class="sidebar">
					<div class="searh-form">
						<h4 class="sb-title">Film Ara</h4>
						<form class="form-style-1" action="#">
							<div class="row">
								<div class="col-md-12 form-it">
									<label>Film Adı</label>
									<input type="text" placeholder="Anahtar kelime girin">
								</div>
								<div class="col-md-12 form-it">
									<label>Türler & Alt Türler</label>
									<div class="group-ip">
										<select name="skills" multiple="" class="ui fluid dropdown">
											<option value="">Türleri filtrelemek için seçin</option>
											<option value="Action1">Aksiyon</option>
											<option value="Action2">Dram</option>
											<option value="Action3">Komedi</option>
											<option value="Action4">Bilim Kurgu</option>
											<option value="Action5">Korku</option>
										</select>
									</div>
								</div>
								<div class="col-md-12 form-it">
									<label>Puan Aralığı</label>
									<select>
										<option value="range">Bir puan aralığı seçin</option>
										<option value="saab">9 - 10</option>
										<option value="saab">7 - 8.9</option>
										<option value="saab">5 - 6.9</option>
										<option value="saab">0 - 4.9</option>
									</select>
								</div>
								<div class="col-md-12 form-it">
									<label>Yayın Yılı</label>
									<div class="row">
										<div class="col-md-6">
											<select>
												<option value="range">Başlangıç</option>
												<option value="number">2000</option>
												<option value="number">2005</option>
												<option value="number">2010</option>
												<option value="number">2015</option>
												<option value="number">2020</option>
											</select>
										</div>
										<div class="col-md-6">
											<select>
												<option value="range">Bitiş</option>
												<option value="number">2000</option>
												<option value="number">2005</option>
												<option value="number">2010</option>
												<option value="number">2015</option>
												<option value="number">2020</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-md-12 ">
									<input class="submit" type="submit" value="Ara">
								</div>
							</div>
						</form>
					</div>
					<div class="ads">
						<img src="/Film-Review-Movie-Database/images/uploads/ads1.png" alt="">
					</div>
					<div class="sb-facebook sb-it">
						<h4 class="sb-title">Find us on Facebook</h4>
						<iframe src="#" data-src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Ftemplatespoint.net%2F%3Ffref%3Dts&tabs=timeline&width=340&height=315px&small_header=true&adapt_container_width=false&hide_cover=false&show_facepile=true&appId" height="315" style="width:100%;border:none;overflow:hidden"></iframe>
					</div>
					<div class="sb-twitter sb-it">
						<h4 class="sb-title">Tweet to us</h4>
						<div class="slick-tw">
							<div class="tweet item" id="">
								<!-- Put your twiter id here -->
							</div>
							<div class="tweet item" id="">
								<!-- Put your 2nd twiter account id here -->
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>